<div class="row">
  
  <%= render 'books/userinfo', book: @booknew, user: @user %>
  
  <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
  	<table class="table">
      <tbody>
        <tr>
          <td>
            <%= link_to user_path(@book.user_id) do %>
            <%= attachment_image_tag @book.user, :profile_image, fallback:"no_image.jpg", size:"40x40" %><br>
            <%= @user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(@book.id) do %>
            <%= @book.title %>
            <% end %>
          </td>
          <td>
            <%= @book.body %>
          </td>
          
          <% if @user.id == current_user.id %>
          
            <td>
              <%= link_to "Edit", edit_book_path, class:"btn btn-sm btn-success" %>
            </td>
            <td>
              <%= link_to "Destroy", @book, method: :delete, class:"btn btn-sm btn-danger" %>
            </td>

          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
    
</div>